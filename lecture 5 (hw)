create or replace procedure ex
(location_id_in number, full_address out varchar2)
AS

begin 
select l.postal_code||', '||c.country_name||', '||l.city||', '||l.street_address||', '||l.location_id
into full_address
from locations l, countries c
where l.country_id= c.country_id and l.location_id = location_id_in;

if full_address is null then full_address:='Адрес не найден'; end if;
end ex;


declare
address varchar2(32000);

begin
ex(2400, address);
dbms_output.put_line(address);
end;

